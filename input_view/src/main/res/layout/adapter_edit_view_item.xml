<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/key_viewRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="45dp">

        <TextView
            android:id="@+id/tv_input_key"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="测试一下"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/tv_input_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_input_key"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_red_star"
            android:visibility="gone" />
    </LinearLayout>

    <com.zby.view.inputview.form.InputClearEditText
        android:id="@+id/et_input_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:ellipsize="end"
        android:hint="请输入"
        android:imeOptions="actionNext"
        android:minHeight="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/text_color2"
        android:textSize="@dimen/sp_16" />

</LinearLayout>